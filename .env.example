# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/instagram_scraper

# Redis
REDIS_URL=redis://localhost:6379

# AWS S3 (LocalStack for local development)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1
AWS_S3_BUCKET=scraper-exports
AWS_S3_ENDPOINT=http://localhost:4566

# Instagram (for production, remove for mocked endpoints)
MOCK_INSTAGRAM=true

# Railway deployment (optional)
RAILWAY_TOKEN=
RAILWAY_PROJECT_ID=
RAILWAY_ENVIRONMENT=production

# Cloudflare R2 (production alternative to S3)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_BUCKET_URL=
